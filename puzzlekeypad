// DavidE 2/4/15
// This is my first Keypad sketch.  I am using a 12 key 13 pin common terminal
// keypad from SeeedStudio.

int star, seven, four, one, zero, eight, five, two, pound, nine, six, three = 1;
int pstar, pseven, pfour, pone, pzero, peight, pfive, ptwo, ppound, pnine, psix, pthree = 1;

void setup(){
  Serial.begin(115200);

  analogSetAttenuation(ADC_11db);
  /*
  Set pins 2-13 as inputs and enable the internal pull-up resistor 
  with the INPUT_PULLUP constant.  Wire each of these pins directly 
  to a unique pin on the keypad thus addressing each key.  
  The common terminal is connected to ground. 
  */
  pinMode(27, INPUT_PULLUP);
  pinMode(26, INPUT_PULLUP);
  pinMode(25, INPUT_PULLUP);
  pinMode(4, INPUT_PULLUP);
  pinMode(16, INPUT_PULLUP);
  pinMode(17, INPUT_PULLUP);
  pinMode(5, INPUT_PULLUP);
  pinMode(18, INPUT_PULLUP);
  pinMode(19, INPUT_PULLUP);
  pinMode(21, INPUT_PULLUP);
  pinMode(22, INPUT_PULLUP);
  pinMode(23, INPUT_PULLUP); 
  
}

void loop(){

  int sensorValue = analogRead(34);
  
  Serial.println(sensorValue);
  delay(1);

  // The variable names correspond to the keys on the keypad:
  star = digitalRead(36);  // keypad pin 2
  seven = digitalRead(39);  // keypad pin 3
  four = digitalRead(34);  // keypad pin 4
  one = digitalRead(32);  // keypad pin 5
  zero = digitalRead(33);  // keypad pin 6
  eight = digitalRead(23);  // keypad pin 7
  five = digitalRead(22);  // keypad pin 8
  two = digitalRead(1);  // keypad pin 9
  pound = digitalRead(3);  // keypad pin 10
  nine = digitalRead(21);  // keypad pin 11
  six = digitalRead(19);  // keypad pin 12
  three = digitalRead(18);  // keypad pin 13

  // 5, 17, 16
  
  // When the digitalRead() of a pin returns 0 the corresponding 
  // key label is printed via Serial.
  if(!star && pstar){ Serial.println("*"); }
  if(!seven && pseven){Serial.println(7);}
  if(!four && pfour){ Serial.println(4); }
  if(!one && pone){ Serial.println(1); }
  if(!zero && pzero){ Serial.println(0); }
  if(!eight && peight){ Serial.println(8); }
  if(!five && pfive){ Serial.println(5); }
  if(!two && ptwo){ Serial.println(2); }
  if(!pound && ppound){ Serial.println("#"); }
  if(!nine && pnine){ Serial.println(9); }
  if(!six && psix){ Serial.println(6); }
  if(!three && pthree){ Serial.println(3); }

  pstar = digitalRead(15);  // keypad pin 2
  pseven = digitalRead(2);  // keypad pin 3
  pfour = digitalRead(0);  // keypad pin 4
  pone = digitalRead(4);  // keypad pin 5
  pzero = digitalRead(16);  // keypad pin 6
  peight = digitalRead(17);  // keypad pin 7
  pfive = digitalRead(5);  // keypad pin 8
  ptwo = digitalRead(18);  // keypad pin 9
  ppound = digitalRead(19);  // keypad pin 10
  pnine = digitalRead(21);  // keypad pin 11
  psix = digitalRead(22);  // keypad pin 12
  pthree = digitalRead(23);
  
}



